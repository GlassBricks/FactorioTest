{
  "compilerOptions": {
    "target": "esnext",
    "module": "none",
    "moduleResolution": "node",
    "types": [
      "typed-factorio/runtime",
      "factorio-test"
    ],
    "lib": [
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-tstl-plugin"
      }
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "rootDir": "."
  },
  "tstl": {
    "luaTarget": "5.2",
    "sourceMapTraceback": true,
    "noImplicitSelf": true,
    "noResolvePaths": [
      "__factorio-test__/init"
    ]
  },
  "include": [
    "."
  ],
  "exclude": [
    "factorio-test/**/*"
  ]
}
