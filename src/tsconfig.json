{
  "compilerOptions": {
    "target": "esnext",
    "module": "none",
    "moduleResolution": "node",
    "types": ["typed-factorio/runtime"],
    "lib": ["esnext"],
    "plugins": [
      {
        "name": "typescript-tstl-plugin"
      }
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "rootDir": "."
  },
  "tstl": {
    "luaTarget": "5.2",
    "sourceMapTraceback": true,
    "noImplicitSelf": true,
    "noResolvePaths": ["__factorio-test__/init"]
  },
  "include": [".", "../node_modules/typed-factorio/runtime/index.d.ts", "../index.d.ts"],
  "exclude": ["factorio-test/**/*"]
}
