{
  "name": "factorio-test",
  "private": true,
  "workspaces": [
    "cli",
    "types",
    "mod"
  ],
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.19.30",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-to-lua": "^1.33.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1"
  },
  "scripts": {
    "lint": "eslint integration-tests",
    "prettier:check": "prettier --check \"**/*.{ts,json}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,json}\"",
    "build:usage-test-mod": "tstl -p integration-tests/fixtures/usage-test-mod/tsconfig.json",
    "build:only-test-mod": "tstl -p integration-tests/fixtures/only-test-mod/tsconfig.json",
    "build:test-mods": "concurrently npm:build:usage-test-mod npm:build:only-test-mod",
    "pretest:integration": "conc \"npm run pretest -w mod\" npm:build:test-mods",
    "test:integration": "conc npm:test:integration:concurrent npm:test:integration:watch",
    "test:integration:concurrent": "tsx integration-tests/test-runner.ts",
    "test:integration:watch": "tsx integration-tests/tests/watch-mode.ts"
  }
}
