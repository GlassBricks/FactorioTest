{
  "name": "factorio-test",
  "private": true,
  "workspaces": [
    "cli",
    "types",
    "mod"
  ],
  "type": "module",
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.18.0",
    "@types/node": "^20.19.30",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.22.0",
    "typescript-to-lua": "^1.33.2"
  },
  "scripts": {
    "lint": "npm run lint --workspaces --if-present && eslint integration-tests",
    "test": "npm run test --workspaces --if-present",
    "check": "npm run lint && npm run test && npm run test:integration",
    "prettier:check": "prettier --check \"**/*.{ts,json}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,json}\"",
    "build:usage-test-mod": "tstl -p integration-tests/fixtures/usage-test-mod/tsconfig.json",
    "build:only-test-mod": "tstl -p integration-tests/fixtures/only-test-mod/tsconfig.json",
    "build:infinite-loop-mod": "tstl -p integration-tests/fixtures/infinite-loop-mod/tsconfig.json",
    "build:test-mods": "concurrently npm:build:usage-test-mod npm:build:only-test-mod npm:build:infinite-loop-mod",
    "pretest:integration": "conc \"npm run pretest -w mod\" npm:build:test-mods",
    "test:integration": "tsx integration-tests/test-runner.ts"
  }
}
